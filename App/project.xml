<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <About>
    <Summary>Cliff walking mission based on Sutton and Barto.</Summary>
  </About>

  <ServerSection>
    <ServerInitialConditions>
        <Time><StartTime>1</StartTime></Time>
    </ServerInitialConditions>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,2*3,2;1;village"/>
      <DrawingDecorator>
        <!-- coordinates for cuboid are inclusive -->
        <DrawCuboid x1="0"  y1="1" z1="0"  x2="20" y2="3" z2="20" type="sandstone" />      <!-- floor of the arena -->
        <DrawCuboid x1="9"  y1="4" z1="20"  x2="11" y2="6" z2="22" type="iron_block" />
        <DrawCuboid x1="10"  y1="4" z1="20"  x2="10" y2="5" z2="20" type="air" />
        <DrawCuboid x1="10"  y1="4" z1="20"  x2="10" y2="5" z2="20" face="SOUTH" type="wooden_door" />
        <DrawCuboid x1="20"  y1="4" z1="6"  x2="22" y2="6" z2="8" type="cobblestone" />
        <DrawCuboid x1="20"  y1="4" z1="7"  x2="20" y2="5" z2="7" type="air" />
        <DrawCuboid x1="19"  y1="4" z1="7"  x2="19" y2="5" z2="7" face="WEST" type="wooden_door" />
        <DrawCuboid x1="-1"  y1="4" z1="9"  x2="-3" y2="6" z2="11" type="redstone_ore" />
        <DrawCuboid x1="-1"  y1="4" z1="10"  x2="-1" y2="5" z2="10" type="air" />
        <DrawCuboid x1="0"  y1="4" z1="10"  x2="0" y2="5" z2="10" face="EAST" type="wooden_door" />
        <DrawBlock x="0"  y="3" z="0" type="cobblestone" />    <!-- the starting marker -->
        <DrawBlock x="19"  y="3" z="7" type="lapis_block" />     <!-- the destination marker -->
        <DrawBlock x="0"  y="3" z="10" type="diamond_ore" />     <!-- the destination marker -->
        <DrawBlock x="10"  y="3" z="19" type="glowstone" />     <!-- the destination marker -->
      </DrawingDecorator>
      <ServerQuitFromTimeUp timeLimitMs="2000000"/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>Cristina</Name>
    <AgentStart>
      <Placement x="0.5" y="4.0" z="0.5" pitch="30" yaw="0"/>
    </AgentStart>
    <AgentHandlers>
      <!-- <AgentQuitFromTouchingBlockType>
          <Block type="cobblestone"/>
      </AgentQuitFromTouchingBlockType> -->
      <ObservationFromGrid>
          <Grid name="floorAll">
            <min x="0" y="-1" z="0"/>
            <max x="20" y="-1" z="20"/>
          </Grid>
      </ObservationFromGrid>
      <DiscreteMovementCommands/>
      <ObservationFromFullStats/>
      <RewardForTouchingBlockType>
        <Block reward="100.0" type="lapis_block" behaviour="onceOnly"/>
      </RewardForTouchingBlockType>
      <RewardForSendingCommand reward="-1" />
      <!-- <AgentQuitFromTouchingBlockType>
          <Block type="lapis_block" />
      </AgentQuitFromTouchingBlockType> -->
    </AgentHandlers>
  </AgentSection>

</Mission>
